<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rectangle_3"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/container_image_hotel"
            android:layout_width="90dp"
            android:layout_height="102dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/image_hotel"
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:layout_alignParentTop="true"

                android:scaleType="fitXY"

                android:src="@drawable/hotel1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/container_image_hotel"
            android:layout_toRightOf="@+id/container_image_hotel"
            android:fontFamily="@font/poppins_medium"
            android:text="Plataran Canggu Bali Resort &amp; spa Plataran Canggu Bali Resort &amp; spa"
            android:textColor="@color/color_primary"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/city_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_hotel"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:layout_toEndOf="@id/container_image_hotel"
            android:layout_toRightOf="@id/container_image_hotel"
            android:fontFamily="@font/poppins_light"
            android:text="Kutai Utara, Badung"
            android:textColor="@color/color_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_hotel"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:layout_toEndOf="@id/container_image_hotel"
            android:layout_toRightOf="@id/container_image_hotel"
            android:fontFamily="@font/poppins_bold"
            android:gravity="bottom"

            android:text="$42"
            android:textColor="@color/color_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/price_hotel"
            android:layout_toRightOf="@id/price_hotel"
            android:fontFamily="@font/poppins_light"

            android:gravity="bottom"
            android:text="per night"
            android:textColor="@color/color_secondary" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/night"
            android:layout_toRightOf="@+id/night"

            android:gravity="end">

            <TextView
                android:id="@+id/star_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star"
                android:fontFamily="@font/poppins"
                android:text="5.0"
                android:textColor="@color/color_star"
                android:textSize="18sp" />
        </LinearLayout>


    </RelativeLayout>


</FrameLayout>


